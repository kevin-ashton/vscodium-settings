{
  // Insiders tweaks (since we share them)
  // - change "workbench.list.openMode" to "singleClick"
  // - uncomment "Instance sidebar preview" in keyboard shortcuts
  //


  // Allow you to select a folder without toggling it
  "workbench.list.openMode": "doubleClick",

  // Allow instant previews on a file as you use your arrow keys
  // https://stackoverflow.com/questions/46853186/instantly-open-files-when-navigating-the-file-explorer-with-arrow-keys-in-vscode/66237216#66237216
  "multiCommand.commands": [
    {
      "command": "multiCommand.navigateExplorerDownAndPreviewFile",
      "sequence": ["list.focusDown", "filesExplorer.openFilePreserveFocus"]
    },
    {
      "command": "multiCommand.navigateExplorerUpAndPreviewFile",
      "sequence": ["list.focusUp", "filesExplorer.openFilePreserveFocus"]
    }
  ],


  // I want vanilla zsh, not "smart" features
  "terminal.integrated.shellIntegration.enabled": false,


  "markdown.copyFiles.destination": {
    "**/*": "images/${documentBaseName}/"
  },

  "emmet.showExpandedAbbreviation": "never",
  "emmet.triggerExpansionOnTab": true,

  "nanoid-snippets.snip0": "__NANOID__",
  "nanoid-snippets.snip1": "L.dev($1,'__NANOID__')$0",
  "nanoid-snippets.snip2": "try {\n $4\n } catch(e) {\n throw L.appendToErrorEnsureEventuallyLogged({error: e, addStack: { message: '$1', lid: '__NANOID__', meta: {${3}}}})\n}",
  "nanoid-snippets.snip3": "throw L.createErrorEnsureEventuallyLogged({message: '$1', lid: '__NANOID__', meta: {$2}})",
  "nanoid-snippets.snip4": "console.log($1,'__NANOID__')$0",
  "nanoid-snippets.snip5": "\"__NANOID__\"",
  "nanoid-snippets.snip6": "\nconsole.log(\"__HOURS_MINUTES_SECONDS__ __NANOID__  DELETE_HMS\")",

  "cSpell.userWords": ["dir", "Gamified", "Jens", "Karoline", "Macbook"],
  "editor.fontSize": 16,
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.scrollback": 20000,
  "editor.lineNumbers": "on",

  "editor.renameOnType": true,
  "window.confirmBeforeClose": "keyboardOnly",

  // Allow snippets to have suggestions
  "editor.suggest.snippetsPreventQuickSuggestions": false,

  // Show problems in status bar
  "problems.showCurrentInStatus": true,

  "clock.dateFormat": "mmm dd, hh:MM TT",
  "explorer.confirmDelete": false,

  // Mini-map
  "editor.minimap.enabled": false,
  // "editor.minimap.showSlider": "always",
  // "editor.minimap.renderCharacters": true,
  "editor.minimap.maxColumn": 60,

  "terminal.integrated.cursorBlinking": true,
  // When you have text selected and you scroll it keeps it from bumping the bottom
  "editor.cursorSurroundingLines": 4,

  "editor.wordWrap": "on",
  "editor.quickSuggestionsDelay": 0,
  "editor.lineHeight": 0,
  // Get rid of annoying list of open files in the sidebar (why have that when you already have tabs?)
  "explorer.openEditors.visible": 0,
  // Sidebar
  "explorer.confirmDragAndDrop": false,

  // Problem is if we disable this we loose 'number' | 'string' etc in typescript
  // Remove language specific keywords from intelisense
  // "editor.suggest.filteredTypes": {
  //     "keyword": false
  // },
  "editor.suggestSelection": "first",

  // Does it show suggestions when you type
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on",
    "other": "on"
  },
  "editor.renderWhitespace": "none",
  // Always use the json version of the settings
  "workbench.settings.editor": "json",
  // Controls if the explorer should automatically reveal and select files when opening them.
  "explorer.autoReveal": false,
  // Get rid of those annoying recommendations telling you to install x, y, and z
  "extensions.ignoreRecommendations": true,
  // Put snippits on top of suggestions. Kind of annoying since
  // "editor.snippetSuggestions": "top",
  "files.trimTrailingWhitespace": true,
  // Disable some autodetect stuff
  "typescript.tsc.autoDetect": "off",
  "npm.autoDetect": "off",
  "grunt.autoDetect": "off",
  "jake.autoDetect": "off",
  "gulp.autoDetect": "off",
  "search.mode": "view",
  "search.exclude": {
    "**/app.bundle": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/Pods": true,
    "**/dist/**": true
  },

  // Line endings
  "files.eol": "\n",
  // Enable per-language settings

  // Make it so each window stays open
  // "workbench.editor.enablePreview": false,
  // Files opened with cmd+o will remain open (no longer put into preview state that requires an edit)
  "workbench.editor.enablePreviewFromQuickOpen": false,
  // "typescript.preferences.importModuleSpecifierEnding": "js",
  // Autosave
  "files.autoSave": "onFocusChange",
  // Default hide/exclude
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.dropbox": true,
    "**/.idea": true,
    "**/.cache": true,
    "**/*.js.map": true,
    "**/*.ts.map": true,
    // "**/*.d.ts": true,
    "**/yarn-error.log": true
  },

